<?xml version="1.0"?>
<config>
  <modules>
    <My_Custom>
      <version>0.1.1</version>
    </My_Custom>
  </modules>
  <frontend>
    <routers>
      <custom>
        <use>standard</use>
          <args>
            <module>My_Custom</module>
            <frontName>custom</frontName>
          </args>
      </custom>
    </routers>
		<layout>
		  <updates>
			<custom>
			  <file>custom.xml</file>
			</custom>
		  </updates>
		</layout>
  </frontend>
  <global>
    <helpers>
      <custom>
        <class>My_Custom_Helper</class>
      </custom>
    </helpers>
	<blocks>
	  <custom>
		<class>My_Custom_Block</class>
	  </custom>
	</blocks>
	<models>
	  <custom>
		<class>My_Custom_Model</class>
		<resourceModel>custom_mysql4</resourceModel>
	  </custom>
	  <custom_mysql4>
		<class>My_Custom_Model_Mysql4</class>
		<entities>		  
			  <custom>
				<table>custom</table>
			  </custom>
        </entities>
	  </custom_mysql4>
	</models>
	<resources>
	  <custom_setup>
		<setup>
		  <module>My_Custom</module>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </custom_setup>
	  <custom_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </custom_write>
	  <custom_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </custom_read>
	</resources>
  </global>
  <admin>
	<routers>
	  <custom>
	    <use>admin</use>
		<args>
		  <module>My_Custom</module>
		  <frontName>admin_custom</frontName>
		</args>
	  </custom>
	</routers>
  </admin>
  <adminhtml>
	<menu>
	  <amy>
		<children>
		  <custom module="custom">
		    <title>Custom</title>
			<sort_order>1</sort_order>
			<action>admin_custom/adminhtml_custom</action>
		  </custom>
		</children>
	  </amy>
	</menu>
	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<custom translate="title" module="custom">
			  <title>Custom</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <custombackend translate="title">
			<title>Backend Page Title</title>
		  </custombackend>
		  <custom translate="title">
			<title>Manage Custom</title>
			<sort_order>0</sort_order>
		  </custom>
			  </children>
			</custom>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<custom>
		  <file>custom.xml</file>
		</custom>
	  </updates>
	</layout>
  </adminhtml>
</config> 