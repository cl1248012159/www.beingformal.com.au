            jQuery("#select-custom-size-list input[type='text']").each(function(i){
                if(jQuery(this).data('custom') == 'basic'){
                    if($(this).val() === ''){
                        flag = true;
                        $(this).siblings('.size-error').show();
                    }else{
                        $(this).siblings('.size-error').hide();
                        custom_size += $(this).attr('name') + ':' + $(this).val() + ' ' + $("#cs_unit").val() + ';';
                    }
                }

                if(jQuery(this).data('custom') == 'additional'){
                    if(jQuery("#custFms").css('display') == 'block'){
                        if($(this).val() === ''){
                            flag = true;
                            $(this).siblings('.size-error').show();
