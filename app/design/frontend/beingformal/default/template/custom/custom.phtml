            jQuery('input[data-rule="required"]').each(function(){
                var dfn = $(this).siblings('dfn[data-rule="required"]');
                if(dfn.data('warn')){
                }else{
                    dfn =$(this).parent().siblings('dfn[data-rule="required"]');
                }
                if($.trim($(this).val()) === "" || $.trim($(this).val())==='custom') { 
                    flag = true;
                    dfn.addClass('Verro').html( dfn.data('warn') );
                }else{
                    dfn.removeClass('Verro').html('');
                }
            });
            if(flag){
                return false;
            }

            jQuery("#custForm").submit();
        });
        jQuery("#btn_reset_cs").click(function(){
            jQuery("#select-custom-size-list input[type='text']").val('');
            jQuery('input[name="size"]').val('');
        });
        jQuery("#btn_submit_cs").click(function(){
            var flag = false;
